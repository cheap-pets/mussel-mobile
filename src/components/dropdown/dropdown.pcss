.mu-dropdown {
  position: relative;
  display: inline-block;
  vertical-align: top;

  &[expanded] [icon="dropdown"] {
    transform: rotate(-180deg);
  }
}

.mu-dropdown-panel {
  position: absolute;
  z-index: 110;
  padding: 10px;
  overflow: hidden;

  & > .mu-dropdown-panel_wrapper {
    border: 1px solid $normalBorderColor;
    background: $normalBackground;
    visibility: hidden;
    border-radius: $dropdownBorderRadius;
    box-shadow: $dropdownShadow;
    opacity: 0;

    &:empty {
      display: none;
    }

    &[direction=up] {
      transform: translateY(100%);
    }

    &[direction=down] {
      transform: translateY(-100%);
    }

    & > .mu-list-item {
      padding: $dropdownItemPadding;
      cursor: pointer;
    }

    & > .mu-footer-button {
      padding: 4px;
      text-align: center;
      cursor: pointer;

      &:hover {
        background: $normalTinyBackground;
      }
    }
  }

  &[slide]  > .mu-dropdown-panel_wrapper {
    visibility: visible;
    transition-property: transform, opacity;
    transition-timing-function: ease-in;
    transition-duration: .2s;
  }

  &[slide=in] > .mu-dropdown-panel_wrapper {
    transform: translateY(0);
    opacity: 1;
  }

  &[slide=out] .mu-list-item:hover {
    background: inherit;
  }
}

body > .mu-dropdown-panel {
  position: fixed;
}

[popup-style=dropdown-list],
[popup-style=dropdown-menu] {
  & > .mu-dropdown-panel_wrapper {
    padding: $dropdownListPadding;
  }
}

[popup-style=dropdown-menu] .mu-list-item:hover {
  color: $normalHighlightTextColor;
  background: var(--mu-primary-color);
}
