.mu-bar {
  & > * {
    margin-right: $halfSpacingSize;

    &:last-child {
      margin-right: 0;
    }
  }

  &.mu-toolbar {
    height: $normalBarHeight; 
    padding: 0 10px;

    & > span,
    & > label {
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
    }
  }
}
