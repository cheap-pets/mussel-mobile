  .mu-prompt-panel {
    & > .mu-icon {
      margin-left: auto;
      font-size: 100px;
      color: $normalWeakTextColor;
    }

    & > div {
      margin-right: auto;
    }

    &[direction="column"] {
      & > .mu-icon {
        margin: auto 0 0;
      }
      & > div {
        margin: 0 0 auto;

        & > * {
          text-align: center;
        }
      }
    }

    & .mu-prompt-panel_headline {
      font-size: 1.2rem;
      font-weight: 600;
    }

    & .mu-prompt-panel_message {
      font-size: 1rem;
      font-weight: 600;
    }

    & .mu-prompt-panel_hint {
      font-size: 1rem;
      color: $normalSubtitleTextColor;
    }

    & .mu-button + .mu-button {
      margin-left: $halfSpacingSize;
    }
  }
