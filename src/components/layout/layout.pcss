.mu-flex-box {
  position: relative;
  display: flex;
  align-items: stretch;

  &[direction="column"] {
    flex-direction: column;
  }

  &[direction="row-reverse"] {
    flex-direction: row-reverse;
  }

  &[direction="column-reverse"] {
    flex-direction: column-reverse;
  }

  &[inline] {
    display: inline-flex;
  }

  &[flex-wrap] {
    flex-wrap: wrap;
    align-content: flex-start;
  }

  &[justify-content="center"] {
    justify-content: center;
  }

  &[align-items="flex-start"] {
    align-items: flex-start;
  }

  &[align-items="center"] {
    align-items: center;
  }

  &[align-items="stretch"] {
    align-items: stretch;
  }

  &[flex-center] {
    align-items: center;
    justify-content: center;
  }

  & > * {
    position: relative;
    box-sizing: border-box;
  }

  & > [flex-auto] {
    flex: 1 1 auto !important;
  }

  & > [flex-none] {
    flex: none !important;
  }

  & > [align-self="center"] {
    align-self: center;
  }

  & > [align-self="stretch"] {
    align-self: stretch;
  }

  & > [size="auto"] {
    flex: 1 1 auto;
  }
  @for $i from 1 to 8 {
    & > [size="$i"] {
      flex: $i $i $(i)px;
    }
  }
}

.mu-absolute-fit {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

[cell-spacing], [cellspacing] {
  margin: $halfSpacingSize;
}

[cell-padding], [cellpadding] {
  padding: $halfSpacingSize;

  & > .mu-absolute-fit {
    top: $halfSpacingSize;
    left: $halfSpacingSize;
    right: $halfSpacingSize;
    bottom: $halfSpacingSize;
  }

  & > .mu-divider {
    padding: 0 $halfSpacingSize;
  }
}

[content-spacing] {
  padding: $halfSpacingSize;

  & > div {
    margin: $halfSpacingSize;
  }

  & > .mu-absolute-fit {
    top: $unitSpacingSize;
    left: $unitSpacingSize;
    right: $unitSpacingSize;
    bottom: $unitSpacingSize;
  }
}

[content-spacing=along] {
  &[direction="row"],
  &[direction="row-reverse"] {
    padding: 0 $halfSpacingSize;

    & > div {
      margin: 0 $halfSpacingSize;
    }

    & > .mu-absolute-fit {
      top: 0;
      bottom: 0;
    }
  }

  &[direction="column"],
  &[direction="column-reverse"] {
    padding: $halfSpacingSize 0;

    & > div {
      margin: $halfSpacingSize 0;
    }

    & > .mu-absolute-fit {
      left: 0;
      right: 0;
    }
  }
}

[content-spacing=between] {
  padding: 0;

  &[direction="row"],
  &[direction="row-reverse"] {
    & > div {
      margin: 0 $halfSpacingSize;
    }
  }

  &[direction="row"] {
    & > div:first-child {
      margin-left: 0;
    }

    & > div:last-child {
      margin-right: 0;
    }
  }
  
  &[direction="row-reverse"] {
    & > div:first-child {
      margin-right: 0;
    }

    & > div:last-child {
      margin-left: 0;
    }
  }

  &[direction="column"],
  &[direction="column-reverse"] {
    & > div {
      margin: $halfSpacingSize 0;
    }
  }

  &[direction="column"] {
    & > div:first-child {
      margin-top: 0;
    }

    & > div:last-child {
      margin-bottom: 0;
    }
  }

  &[direction="column-reverse"] {
    & > div:first-child {
      margin-bottom: 0;
    }

    & > div:last-child {
      margin-top: 0;
    }
  }

  & > div.mu-absolute-fit {
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }
}
